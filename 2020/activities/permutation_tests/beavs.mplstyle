# Seaborn common parameters
# .15 = dark_gray
# .8 = light_gray
figure.facecolor: white
lines.linewidth: 3
text.color: .15
axes.labelcolor: .15
legend.frameon: False
legend.numpoints: 1
legend.scatterpoints: 1
xtick.direction: out
ytick.direction: out
xtick.color: .15
ytick.color: .15
axes.axisbelow: True
grid.linestyle: -
lines.solid_capstyle: round

# Seaborn darkgrid parameters
axes.grid: True
# axes.facecolor: (1.0, 0.98, 0.98) # snow
axes.facecolor: (0.96, 0.96, 0.96) # white smoke
axes.edgecolor: 0.85
axes.linewidth: 0
grid.color: 0.85
xtick.major.size: 0
ytick.major.size: 0
xtick.minor.size: 0
ytick.minor.size: 0

# Custom
font.family: monospace
font.size: 16.0
# https://github.com/dantaki/vapeplot/blob/master/vapeplot/vapeplot.py
